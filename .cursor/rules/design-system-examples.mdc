            <CardContent className={spacing.card.padding}>
              <p className={commonClasses.metricLabel}>Ventas del Mes</p>
              <p className={commonClasses.metricValue}>42</p>
            </CardContent>
          </Card>
          <Card className={commonClasses.card}>
