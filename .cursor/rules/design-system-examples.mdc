              <p className={commonClasses.metricLabel}>Ingresos Totales</p>
              <p className={commonClasses.metricValue}>$1.25M</p>
            </CardContent>
          </Card>
        </div>

        {/* Card con Título */}
        <Card className={commonClasses.card}>
          <CardHeader className={spacing.card.header}>
            <CardTitle className={commonClasses.sectionTitle}>
              Evolución de Ventas
            </CardTitle>
